{
  "name": "dreamcometrue-website",
  "version": "1.0.0",
  "description": "Dream Come True Information Technology - Professional Website",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "NODE_ENV=test jest --verbose --coverage --testTimeout=10000 --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:ci": "NODE_ENV=test jest --verbose --coverage --testTimeout=10000 --forceExit",
    "docker:build": "docker build -t dreamcometrue-website .",
    "docker:run": "docker run -p 3000:3000 dreamcometrue-website"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "morgan": "^1.10.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "app.js",
      "routes/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "verbose": true,
    "forceExit": true,
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"]
  },
  "keywords": ["fintech", "education", "blockchain", "it-services"],
  "author": "Dream Come True IT",
  "license": "MIT"
}
